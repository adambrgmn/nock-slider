{
  "name": "nock-slider",
  "version": "0.0.0",
  "description": "A simple image slider library",
  "repository": "git@github.com:adambrgmn/simple-slider.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "jsnext:main": "dist/simple-slider.es.js",
  "module": "dist/simple-slider.es.js",
  "scripts": {
    "prebuild": "rimraf dist/* && rimraf lib/*",
    "build": "npm run build:dist && npm run build:lib",
    "build:dist": "rollup -c --environment BUNDLE_ES && rollup -c --environment BUNDLE_PROD",
    "build:lib": "babel --out-dir lib --ignore \"*.test.js\" src",
    "build:watch": "rollup -c --watch",
    "dev": "node examples/server.js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "raf-schd": "^2.0.1",
    "ramda": "^0.24.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "express": "^4.15.4",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.49.3",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "list-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ],
    "*.json": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  }
}
